<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SalesTaxCalculator.Controls.CustomEntry"
    VerticalOptions="Start">
    <Grid
        RowSpacing="0"
        RowDefinitions="auto, auto, auto">
        <Label
            x:Name="TitleLbl" />
        <Entry
            x:Name="InputCtrl"
            Grid.Row="1"
            Margin="0,10" />
        <BoxView
            x:Name="Separator"
            Grid.Row="2"
            HeightRequest="2" />
        <!--<Label
            x:Name="ErrorLbl"
            Grid.Row="3"
            Margin="0,5" />-->
    </Grid>
</ContentView>

